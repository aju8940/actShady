<!-- Header -->
<header>
	<!-- Header desktop -->
	<div class="container-menu-desktop">
		<div class="wrap-menu-desktop ">
			<nav class="limiter-menu-desktop p-5">

				<!-- Logo desktop -->
				<a href="#" class="logo mr-4"> 
					<img src="/userAssets/images/logo.png" style="width: 150px; color: rgb(21, 22, 22);" alt="actShady">

				</a>

				<!-- Menu desktop -->
				<div class="menu-desktop">
					<ul class="main-menu ">
						<li class="">
							<a href="/">Home</a>
						</li>

						<li>
							<a href="/shop">Shop</a>
						</li>

						<li>
							<a href="about.html" class="dropdown-toggle" data-toggle="dropdown">Categories</a>
							<div class="dropdown-menu">
								<a class="dropdown-item" href="#">Men</a>
								<a class="dropdown-item" href="#">Women</a>
								<a class="dropdown-item" href="#">Kids</a>
								<a class="dropdown-item" href="#">Unisex</a>
								<a class="dropdown-item" href="#">Sports</a>
							</div>
						</li>

						<li>
							<a href="/orders">Orders</a>
						</li>

						<li>
							<a href="contact.html">Contact</a>
						</li>
					</ul>
				</div>

				<!-- Icon header -->

				<% if ( locals.loggedIn ) { %>

					<div class="wrap-icon-header flex-w flex-r-m">
						<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
							<i class="zmdi zmdi-search"></i>
						</div>

						<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti"
							data-notify="<%=cartCount%>">
							<a class="zmdi zmdi-shopping-cart" style="color: rgb(30, 30, 30);"
								href="/shopping-cart"></a>
						</div>

						<a href="#"
							class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti"
							data-notify="0">
							<i class="zmdi zmdi-favorite-outline"></i>
						</a>
					</div>

					<div class="dropdown">
						<!-- <button class="btn btn-success btn-sm  dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> -->
						<a href="/user-profile" class="m-l-20 dropdown-toggle text-dark"
							style="font-family: Georgia, 'Times New Roman', Times, serif;" data-toggle="dropdown">
							<%= loggedIn.name %>
						</a>

						<!-- </button> -->
						<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							<a class="dropdown-item" href="/user-profile">Account</a>
							<a class="dropdown-item" href="/logout">Logout</a>
						</div>
					</div>

					<% } else { %>

						<div class="wrap-icon-header flex-w flex-r-m">
							<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
								<i class="zmdi zmdi-search"></i>
							</div>

							<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti"
								data-notify="0">
								<a class="zmdi zmdi-shopping-cart" style="color: rgb(30, 30, 30);"
									href="/shopping-cart"></a>
							</div>

							<a href="#"
								class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti"
								data-notify="0">
								<i class="zmdi zmdi-favorite-outline"></i>
							</a>
						</div>

						<div class="dropdown">
							<button class="text-dark m-l-20  dropdown-toggle" type="button"
							id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
							aria-expanded="false" style="font-size: large;">Account</button>
							<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
								<a class="dropdown-item" href="/user-profile">Account</a>
								<a class="dropdown-item" href="/login">Login</a>
								<a class="dropdown-item" href="/signup">Signup</a>
							</div>
						</div>
						<% } %>
			</nav>
		</div>
	</div>
</header>