<style>
  body {
    font-family: "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", Helvetica, Arial, sans-serif;
  }
</style>


<section class="content-main">
  <div class="content-header">
    <h2 class="content-title">Orders</h2>
  </div>
  <div class="card mb-4">
    <!-- card-header end -->
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover" id="example">
          <thead>
            <tr>
              <th>Order Id</th>
              <th>Name</th>
              <th>Amount</th>
              <th>Payment Method</th>
              <th>Status</th>
              <th>Date</th>
              <th>Order Details</th>
              <th>Action</th>
              
            </tr>
          </thead>


          <tbody>

            <% orders.forEach(order=> { %>
              <tr>
                <td>
                  <%=order.orderId%>
                </td>
                <td>
                  <%= order.deliveryAddress.name%>
                </td>
                <td>Rs <%=order.totalPrice%>
                </td>
                <td>
                  <%=order.paymentmethod%>
                </td>
                <td>
                  <%=order.orderstatus%>
                </td>

                <td>
                  <%= new Date(order.date).toLocaleDateString('en-GB', {
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric'
                  }).replace(/\//g, '-')%>
                </td>
                <td><a href="/admin/view-order/<%=order._id%>" class="text-dark" style="text-decoration: none;">View Order</a></td>

                <% if (order.orderstatus==="placed" ) { %>

                  <td class="dropdown">
                    <a class="btn btn-dark btn-sm " onclick="shipOrder('<%=order._id%>'); event.preventDefault();" style="border-radius: 1rem ;width: 80px;"
                      type="button">
                      Ship
                    </a>
                  </td>

                  <% } else if (order.orderstatus==="shipped" ) { %>

                    <td class="dropdown">
                      <a class="btn btn-success btn-sm" onclick="deliverOrder('<%=order._id%>'); event.preventDefault();" style="border-radius: 1rem ;width: 80px;"
                        type="button">
                        Deliver
                      </a>
                    </td>

                    <% } else if (order.orderstatus==="delivered" ) { %>

                      <td class="dropdown">
                        <p class="" 
                          style="border-radius: 1rem ;" type="">
                          Delivered
                        </p>
                      </td>

                      <% } else if (order.orderstatus==="return pending" ) { %>

                        <td class="dropdown">
                          <a class="btn btn-danger btn-sm" onclick="returnOrder('<%=order._id%>'); event.preventDefault();"
                            style="border-radius: 1rem ;width: 80px;" type="button">
                            Return
                          </a>
                        </td>

                        <% } else if (order.orderstatus==="order cancelled" ) { %>

                          <td class="dropdown">
                            <p class="" 
                              style="border-radius: 1rem ;" type="">
                              Order Cancelled
                            </p>
                          </td>

                        <% } else { %>

                          <td class="dropdown">
                            <p class="" 
                              style="border-radius: 1rem ;" type="">
                              Returned
                            </p>
                          </td>

                          <% } %>

                          


              </tr>

              <% } )%>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>




  <script>

    $(document).ready(function () {
      $('#example').DataTable();
    });
  </script>



  <script>

    function shipOrder(id) {
      Swal.fire({
        title: 'Do you want ship the order?',
        showDenyButton: true,
        confirmButtonText: 'Ship',
        denyButtonText: `Cancel`,
      }).then((result) => {
        if (result.isConfirmed) {
          $.ajax({
					url: `/admin/ship-product/${id}`,
					method: 'get',
					success: (response) => {
						window.location.href='/admin/order-details'
					}
				})
          Swal.fire('Shipped !', '', 'success')
        } else if (result.isDenied) {
          Swal.fire('Cancelled', '', 'info')
        }
      })
    }

    function deliverOrder(id) {
      Swal.fire({
        title: 'Do you want deliver the order?',
        showDenyButton: true,
        confirmButtonText: 'Deliver',
        denyButtonText: `Cancel`,
      }).then((result) => {
        if (result.isConfirmed) {
          $.ajax({
					url: `/admin/deliver-product/${id}`,
					method: 'get',
					success: (response) => {
						window.location.href='/admin/order-details'
					}
				})
          Swal.fire('Order Delivered !', '', 'success')
        } else if (result.isDenied) {
          Swal.fire('Cancelled', '', 'info')
        }
      })
    }

    function returnOrder(id) {
      Swal.fire({
        title: 'Do you want return the order?',
        showDenyButton: true,
        confirmButtonText: 'Return',
        denyButtonText: `Cancel`,
      }).then((result) => {
        if (result.isConfirmed) {
          $.ajax({
					url: `/admin/return-product/${id}`,
					method: 'get',
					success: (response) => {
						window.location.href='/admin/order-details'
					}
				})
          Swal.fire('Order Returned !', '', 'success')
        } else if (result.isDenied) {
          Swal.fire('Cancelled', '', 'info')
        }
      })
    }

  </script>