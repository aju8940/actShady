  <div class="card mb-4">
    <!-- card-header end -->
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover" id="productsTable">
          <thead>
            <tr>
              <th>Category Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% category.forEach(cat=>{ %>
            <tr>
              <td><%= cat.category%></td>

              <td>
                <a  class="btn btn-brand rounded font-sm " href="/admin/edit-product/<%=cat.category._id%>">Edit</a>
                <a
                  href="#"
                  class="btn btn-danger rounded font-sm"
                  >Delete</a
                >
              </td>
              
            </tr>
            <% } )%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>


<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script>
    $(document).ready( function () {
      $('#productsTable').DataTable();
  } );
</script>