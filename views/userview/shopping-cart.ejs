<script>

    function changeQuantity(cartId,proId,count,price) {   
        let quantity = parseInt(document.getElementById(proId).innerHTML)
        count = parseInt(count)
        if(count+quantity==0){
            Swal.fire({
      title: "Remove Product",
      text: `Do you want to remove this product?`,
      showCancelButton: true,
      confirmButtonText: "Remove",
      cancelButtonText: "Cancel",
      timer: 5000
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
            url:'/remove-product',
            data:{
                cart:cartId,
                product:proId
            },
            method:'post',
            success:(response)=>{
                console.log(response);
                if(response){
                    location.reload()
                }else{
                    document.getElementById(proId).innerHTML=quantity+count
                }
                
            }
        })
      }
    });
  }else{

    $.ajax({
            url:'/change-product-quantity',
            data:{
                cart:cartId,
                product:proId,
                count:count,
                quantity:quantity
            },
            method:'post',
            success:(response)=>{
                if(response){
                    // location.reload()
                    document.getElementById(proId).innerText=quantity+count
                    grandTotal = document.getElementById('grandTotal').innerText
                    grandTotal=parseInt(grandTotal)+price*count
                    document.getElementById('grandTotal').innerText = grandTotal
                    document.getElementById('subtotal').innerText = grandTotal
                     console.log(document.getElementById(proId));


                }else{
                    document.getElementById(proId).innerHTML=quantity+count
                }
                
            }
        })

  } 
    
  } 

    function removeProduct(cartId,proId) {
    Swal.fire({
      title: "Remove Product",
      text: `Do you want to remove this product?`,
      showCancelButton: true,
      confirmButtonText: "Remove",
      cancelButtonText: "Cancel",
      timer: 5000
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
            url:'/remove-product',
            data:{
                cart:cartId,
                product:proId
            },
            method:'post',
            success:(response)=>{
                if(response.removeProduct){
                    location.reload()
                }else{
                    document.getElementById(proId).innerHTML=quantity+count
                }
                
            }
        })
      }
    });
  } 

</script>